<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Reset</title>

    
    <script src="script/login.js"></script>

    <link rel="stylesheet" href="style/login.css">

    <%- include("./common/plugins.ejs") %>
</head>
<body>
    <%- include("./common/header.ejs") %>

    <div class="body-content">
        <div class="login-container">
            <div class="login-gif">
                <img src="images/Login.gif" alt="">
            </div>

            <div class="login-input text-center">
                <div class="login-form-container">
                    <div class="login-header">
                        <h1>Password Reset</h1>
                    </div>


                    <div class="mt-1">
                        <small class="form-text text-muted">Enter your email to receive instructions on how to reset your password.</small>
                    </div>

                    
                    <div class="form-group mt-3">
                        <input type="email" class="login-control mb-2" id="email" placeholder="Emaill Address" onkeyup="enterSignIn()" name="email">
                        <div class="form-group text-danger" id="error-prompt"></div>
                    </div>
                
                    <button type="button" class="btn btn-dark" onclick="passwordReset()">Reset</button>
                    <div class="text-info" id="reset-loader" role="status" style="display: none;">
                        <span class="mt-3 ml-1 spinner-border spinner-border-sm"></span>
                        Loading...
                    </div>

                    <div class="form-group mt-3">
                        <a href="login" class="login-link">Already have an account? Login now!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("./common/footer.ejs") %>
</body>
</html>

<script>
    //Check Sign In
    checkSignIn();

    //Check sign up before
    loginNow();
</script>