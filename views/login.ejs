<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    
    <script src="script/login.js"></script>

    <link rel="stylesheet" href="style/login.css">

    <%- include("./common/plugins.ejs") %>
</head>
<body>
    <%- include("./common/header.ejs") %>

    <div class="body-content">
        <div class="login-container">
            <div class="login-gif">
                <img src="images/Login.gif" alt="">
            </div>

            <div class="login-input text-center">
                <div class="login-form-container">
                    <div class="login-header">
                        <h1>Login</h1>
                    </div>

                    <div id="login-now"  class="alert alert-success alert-dismissible fade show" role="alert" style="display: none;">
                        You may login now!
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div id="account-suspension"  class="alert alert-danger alert-dismissible fade show" role="alert" style="display: none;">
                        Your account is suspended for now, Please contact our customer service!
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    
                        <div class="form-group mt-3">
                            <input type="email" class="login-control mb-2" id="email" placeholder="Emaill Address" onkeyup="enterSignIn()" name="email">
                            <div class="text-left">
                                <span class="error-prompt text-danger"></span>
                            </div>
                        </div>
        
                        <div class="form-group mt-3">
                            <input type="password" class="login-control mb-2" id="password" placeholder="Password" onkeyup="enterSignIn()" name="password">
                            <div class="text-left">
                                <span class="error-prompt text-danger"></span>
                            </div>
                        </div>

                        <div class="text-center login-row row mt-3">

                            <div class="col-6">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Remember Me</label>
                            </div>

                            <div class="col-6">
                                <a href="forgot-password" class="login-link">Forget Password?</a>
                            </div>
                        
                        </div>
                    
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-dark" onclick="login()">Sign In</button>
                        </div>

                        <div class="form-group mt-3">
                            <a href="signup" class="login-link">Not Yet A Member? Sign up now!</a>
                        </div>

                        <div class="text-info" id="login-loader" role="status" style="display: none;">
                            <span class="mt-3 ml-1 spinner-border spinner-border-sm"></span>
                            Loading...
                        </div>
                </div>
               
            </div>
        </div>
    </div>

    <%- include("./common/footer.ejs") %>
</body>
</html>

<script>
    //Check Sign In
    checkSignIn();

    //Check sign up before
    loginNow();
</script>